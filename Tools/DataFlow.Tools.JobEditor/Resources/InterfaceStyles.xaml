    <Style x:Key="GlassButtonStyle"
           TargetType="Button">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="32*" />
                            <RowDefinition Height="37*" />
                        </Grid.RowDefinitions>
                        <Rectangle x:Name="darkBackground"
                                   Grid.Row="0"
                                   Grid.RowSpan="2"
                                   Fill="{StaticResource GlassBackgroundBrush}"
                                   RadiusX="4"
                                   RadiusY="4" />

                        <Rectangle x:Name="pressedEffect"
                                   Grid.Row="0"
                                   Grid.RowSpan="2"
                                   Fill="{StaticResource GlassEffectBrush}"
                                   Opacity="0"
                                   RadiusX="4"
                                   RadiusY="4" />
                        <Rectangle x:Name="glowEffect"
                                   Grid.Row="0"
                                   Grid.RowSpan="2"
                                   Fill="{StaticResource GlassGlowBrush}"
                                   Opacity="0"
                                   RadiusX="4"
                                   RadiusY="4"
                                   StrokeThickness="2" />
                        <Rectangle x:Name="buttonForeground"
                                   Grid.Row="0"
                                   Grid.RowSpan="2"
                                   Fill="{StaticResource GlassForegroundBrush}"
                                   Opacity="1"
                                   RadiusX="4"
                                   RadiusY="4"
                                   StrokeThickness="3" />
                        <Rectangle x:Name="glassEffect"
                                   Grid.Row="0"
                                   Fill="{StaticResource GlassEffectBrush}"
                                   Opacity="0.08"
                                   RadiusX="4"
                                   RadiusY="4" />


                        <ContentPresenter Grid.Row="0"
                                          Grid.RowSpan="2"
                                          Content="{TemplateBinding Content}"
                                          Margin="4"
                                          HorizontalAlignment="Center"
                                          VerticalAlignment="Center" />
                    </Grid>
                    <ControlTemplate.Resources>
                        <Storyboard x:Key="MouseEnterAnimation">
                            <DoubleAnimationUsingKeyFrames BeginTime="00:00:00"
                                                           Storyboard.TargetName="glowEffect"
                                                           Storyboard.TargetProperty="(UIElement.Opacity)">
                                <SplineDoubleKeyFrame KeyTime="00:00:00.1500000"
                                                      Value="0.9" />
                            </DoubleAnimationUsingKeyFrames>
                        </Storyboard>
                        <Storyboard x:Key="MouseLeaveAnimation">
                            <DoubleAnimationUsingKeyFrames BeginTime="00:00:00"
                                                           Storyboard.TargetName="glowEffect"
                                                           Storyboard.TargetProperty="(UIElement.Opacity)">
                                <SplineDoubleKeyFrame KeyTime="00:00:00.1500000"
                                                      Value="0" />
                            </DoubleAnimationUsingKeyFrames>
                        </Storyboard>
                    </ControlTemplate.Resources>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver"
                                 Value="True">
                            <Trigger.EnterActions>
                                <BeginStoryboard Storyboard="{StaticResource MouseEnterAnimation}" />
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <BeginStoryboard Storyboard="{StaticResource MouseLeaveAnimation}" />
                            </Trigger.ExitActions>
                        </Trigger>
                        <Trigger Property="IsPressed"
                                 Value="True">
                            <Setter TargetName="pressedEffect"
                                    Property="Opacity"
                                    Value="0" />

                            <Setter TargetName="darkBackground"
                                    Property="Fill"
                                    Value="{StaticResource GlassDownBackgroundBrush}" />
                            <Setter TargetName="glassEffect"
                                    Property="Fill"
                                    Value="{StaticResource GlassDownEffectBrush}" />
                        </Trigger>

                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="Foreground"
                Value="#FFE0E0FF" />
        <Setter Property="Margin"
                Value="4" />
    </Style>

