    <Style x:Key="ListBoxItemOutline"
           TargetType="{x:Type ContentControl}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ContentControl}">
                    <Border x:Name="OuterBorder"
                            BorderBrush="Transparent"
                            BorderThickness="1"
                            CornerRadius="4">
                        <Border x:Name="InnerBorder"
                                BorderBrush="Transparent"
                                BorderThickness="1"
                                CornerRadius="4">
                            <Grid Background="Transparent"
                                  Margin="0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>

                                <Border x:Name="UpBackground"
                                        Grid.Row="0"
                                        CornerRadius="4,4,0,0"
                                        Visibility="Hidden">
                                    <Border.Background>
                                        <LinearGradientBrush StartPoint="0,0"
                                                             EndPoint="0,1">
                                            <GradientStop Offset="0"
                                                          Color="#50203060" />
                                            <GradientStop Offset="1"
                                                          Color="#50A0C0FF" />
                                        </LinearGradientBrush>
                                    </Border.Background>
                                </Border>

                                <Border x:Name="DownBackground"
                                        Grid.Row="1"
                                        CornerRadius="0,0,4,4"
                                        Background="#50A0C0FF"
                                        Visibility="Hidden" />

                                <Border x:Name="Glow"
                                        Grid.Row="0"
                                        Grid.RowSpan="2"
                                        Opacity="0"
                                        CornerRadius="4,4,4,4">
                                    <Border.Background>
                                        <RadialGradientBrush>
                                            <RadialGradientBrush.RelativeTransform>
                                                <TransformGroup>
                                                    <ScaleTransform ScaleY="2.95"
                                                                    ScaleX="2"
                                                                    CenterX="0.5"
                                                                    CenterY="0.2" />
                                                </TransformGroup>
                                            </RadialGradientBrush.RelativeTransform>
                                            <GradientStop Offset="0"
                                                          Color="#AA87CEEB" />
                                            <GradientStop Offset="1"
                                                          Color="#00000000" />
                                        </RadialGradientBrush>
                                    </Border.Background>
                                </Border>

                                <Border x:Name="border"
                                        Grid.Row="0"
                                        Grid.RowSpan="2"
                                        BorderBrush="#FF000000"
                                        Opacity="0.5"
                                        BorderThickness="1,1,1,1"
                                        CornerRadius="4,4,4,4"
                                        Visibility="Hidden">
                                    <Border.Background>
                                        <LinearGradientBrush StartPoint="0,0"
                                                             EndPoint="0,1">
                                            <LinearGradientBrush.RelativeTransform>
                                                <TransformGroup>
                                                    <ScaleTransform ScaleY="2"
                                                                    CenterX="-1" />
                                                    <TranslateTransform Y="-0.5" />
                                                </TransformGroup>
                                            </LinearGradientBrush.RelativeTransform>
                                            <GradientStop Offset="0"
                                                          Color="Black" />
                                            <GradientStop Offset="0.5"
                                                          Color="SkyBlue" />
                                            <GradientStop Offset="1"
                                                          Color="Black" />
                                        </LinearGradientBrush>
                                    </Border.Background>
                                </Border>

                                <ContentPresenter HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"
                                                  Content="{TemplateBinding Content}"
                                                  Margin="4"
                                                  Grid.Row="0"
                                                  Grid.RowSpan="2" />
                            </Grid>
                        </Border>
                    </Border>
                    <ControlTemplate.Triggers>
                        <DataTrigger Binding="{Binding Path=IsSelected, RelativeSource={RelativeSource Mode=FindAncestor,AncestorType={x:Type ListBoxItem}}}"
                                     Value="True">
                            <Setter TargetName="OuterBorder"
                                    Property="BorderBrush"
                                    Value="#FF000000" />
                            <Setter TargetName="InnerBorder"
                                    Property="BorderBrush"
                                    Value="#FF808080" />
                            <Setter TargetName="DownBackground"
                                    Property="Visibility"
                                    Value="Visible" />
                            <Setter TargetName="UpBackground"
                                    Property="Visibility"
                                    Value="Visible" />
                            <Setter TargetName="Glow"
                                    Property="Opacity"
                                    Value="1.0" />
                        </DataTrigger>
                    </ControlTemplate.Triggers>

                </ControlTemplate>
            </Setter.Value>
        </Setter>

    </Style>

