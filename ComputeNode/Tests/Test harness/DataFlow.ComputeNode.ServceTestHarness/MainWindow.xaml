<Window x:Class="AISTek.DataFlow.ComputeNode.ServiceTestHarness.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DFMasterNode Services test harness"
        WindowStyle="ThreeDBorderWindow"
        ResizeMode="NoResize"
        Background="Transparent"
        mc:Ignorable="d"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Height="230"
        Width="294">
    <StackPanel Orientation="Vertical">
        <Button Click="OpenTaskView_Click"
                Height="48"
                Template="{DynamicResource ResourceKey=GlassButton}">
            Task provider harness
        </Button>
        <Button Click="OpenJobView_Click"
                Height="48"
                Template="{DynamicResource ResourceKey=GlassButton}">
            Job manager harness
        </Button>
        <Button Click="ServerStatus_Click"
                Height="48"
                Template="{DynamicResource ResourceKey=GlassButton}">
            Server status
        </Button>
        <Button Click="Repository_Click"
                Height="48"
                Template="{DynamicResource ResourceKey=GlassButton}">
            Repository
        </Button>
    </StackPanel>
</Window>
